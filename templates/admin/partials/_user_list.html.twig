         data-search="{{ (u.prenom ~ ' ' ~ u.nom ~ ' ' ~ u.email)|lower }}">
        <input class="form-check-input" type="checkbox" value="{{ u.id }}"
               id="u{{ u.id }}" name="users[]">
        <label class="form-check-label" for="u{{ u.id }}">
            {{ u.prenom }} {{ u.nom }} â€“ {{ u.email }}
        </label>
    </div>
{% endfor %}
