{# templates/admin/partials/_user_list.html.twig #}
{% for u in users %}
    <label class="d-flex align-items-center checkbox-item py-1 px-2"
           data-search="{{ (u.prenom ~ ' ' ~ u.nom)|lower }}">
        <input class="form-check-input me-2" type="checkbox" name="users[]" value="{{ u.id }}">
        <span>{{ u.prenom }} {{ u.nom }}</span>

        {# badge compteur #}
        <span class="badge rounded-pill bg-secondary ms-auto"
              title="Nombre de rondes déjà effectuées">
            {{ u.rondes|length }}
        </span>
    </label>
{% else %}
    <div class="text-muted small">Aucun utilisateur disponible.</div>
{% endfor %}
