<div class="mb-4">
    <h6 class="text-primary fw-bold mb-3"><i class="bi bi-clock-history me-2"></i> Indisponibilités</h6>

    {% if user.indisponibilites|length == 0 %}
        <div class="text-muted small">Aucune indisponibilité enregistrée.</div>
    {% else %}
        <div class="d-flex flex-column gap-2">
            {% for i in user.indisponibilites %}
                <div class="d-flex align-items-center gap-2 bg-light rounded-3 px-3 py-2 shadow-sm">
                    <i class="bi bi-calendar-x text-danger fs-5"></i>
                    <div class="small fw-semibold text-dark">
                        {{ i.start|date('d/m/Y H:i') }} <span class="text-muted">→</span> {{ i.end|date('d/m/Y H:i') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<div>
    <h6 class="text-primary fw-bold mb-3"><i class="bi bi-shield-check me-2"></i> Rondes</h6>

    {% if user.rondes|length == 0 %}
        <div class="text-muted small">Aucune ronde effectuée.</div>
    {% else %}
        <div class="d-flex flex-column gap-2">
            {% for r in user.rondes %}
                <div class="d-flex align-items-center gap-2 bg-white border rounded-3 px-3 py-2 shadow-sm">
                    <i class="bi bi-map-fill text-success fs-5"></i>
                    <div class="small fw-semibold text-dark">
                        {{ r.start|date('d/m/Y H:i') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
