{# templates/dashboard.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Tableau de bord{% endblock %}

{# ———————————————————— STYLES ———————————————————— #}
{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animation de soulèvement légère au survol (desktop) */
        .hover-lift {transition: transform .2s ease-in-out;}
        .hover-lift:hover {transform: translateY(-4px);}

        /* Icônes centrés dans les cartes sur très petits écrans */
        @media (max-width: 360px) {
            .module-card i {font-size: 2.2rem !important;}
        }
    </style>
{% endblock %}

{# ———————————————————— CONTENU ———————————————————— #}
{% block body %}
    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">

                <!-- En-tête -->
                <div class="text-center mb-5">
                    <i class="bi bi-grid-fill fs-1" style="color: #0055A5;"></i>
                    <h1 class="fw-bold mt-2" style="color: #0055A5;">Tableau de bord</h1>
                    <p class="text-muted small mb-0">Bienvenue {{ app.user.userIdentifier }}&nbsp;!</p>
                </div>

                <!-- Grille de modules -->
                <div class="row g-4">

                    <!-- Module Cartes -->
                    <div class="col-12 col-sm-6">
                        <a href="{{ path('cartes_index') }}" class="text-decoration-none">
                            <div class="card h-100 shadow-lg border-0 rounded-4 hover-lift">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center py-5 module-card">
                                    <i class="bi bi-map fs-1 mb-3" style="color:#0078D4;"></i>
                                    <h2 class="h5 fw-bold mb-0" style="color:#0055A5;">Cartes</h2>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Module Rondes -->
                    <div class="col-12 col-sm-6">
                        <a href="{{ path('user_my_rounds') }}" class="text-decoration-none">
                            <div class="card h-100 shadow-lg border-0 rounded-4 hover-lift">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center py-5 module-card">
                                    <i class="bi bi-shield-check fs-1 mb-3" style="color:#0078D4;"></i>
                                    <h2 class="h5 fw-bold mb-0" style="color:#0055A5;">Rondes</h2>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Module Mon profil -->
                    <div class="col-12 col-sm-6">
                        <a href="{{ path('app_profile') }}" class="text-decoration-none">
                            <div class="card h-100 shadow-lg border-0 rounded-4 hover-lift">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center py-5 module-card">
                                    <i class="bi bi-person-circle fs-1 mb-3" style="color:#0078D4;"></i>
                                    <h2 class="h5 fw-bold mb-0" style="color:#0055A5;">Mon profil</h2>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-12 col-sm-6">
                        <a href="{{ path('user_indispo_index') }}" class="text-decoration-none">
                            <div class="card h-100 shadow-lg border-0 rounded-4 hover-lift">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center py-5 module-card">
                                    <i class="bi bi-clock fs-1 mb-3" style="color:#0078D4;"></i>
                                    <h2 class="h5 fw-bold mb-0" style="color:#0055A5;">Mes indisponibilitées</h2>
                                </div>
                            </div>
                        </a>
                    </div>

                    {# ——— Décommente et duplique ce bloc pour ajouter de futurs modules ——— #}
                    {#
                    <div class="col-12 col-sm-6 col-md-4">
                        <a href="{{ path('nouveau_module') }}" class="text-decoration-none">
                            <div class="card h-100 shadow-lg border-0 rounded-4 hover-lift">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center py-5 module-card">
                                    <i class="bi bi-gear fs-1 mb-3" style="color:#0078D4;"></i>
                                    <h2 class="h5 fw-bold mb-0" style="color:#0055A5;">Nouveau module</h2>
                                </div>
                            </div>
                        </a>
                    </div>
                    #}

                </div><!-- /.row g-4 -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </main>
{% endblock %}

{# ———————————————————— SCRIPTS ———————————————————— #}
{% block javascripts %}
    {{ parent() }}
    {# Rien de spécifique pour l’instant, la petite anim’ CSS suffit #}
{% endblock %}
